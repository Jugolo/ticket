!-if access closeTicket or access deleteTicket-!
<div class='box'>
  <div class='title'>Admin ticket</div>
  <table class='table-fill'>
    !-if access closeTicket-!
    <tr>
      <th>Change opning state</th>
      <td><a href='?view=tickets&ticket_id=!-ticket_id-!&close=true'>!-if ticket_open == 1-!Close!-else-!Open!-endblock-!</a></td>
    </tr>
    !-endblock-!
    !-if access deleteTicket-!
    <tr>
      <th>Delete ticket</th>
      <td><a href='?view=tickets&ticket_id=!-ticket_id-!&delete=true'>Delete</a></td>
    </tr>
    !-endblock-!
  </table>
</div>
!-endblock-!